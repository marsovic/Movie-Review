<UserControl x:Class="ProjetECE.Controls.MovieSpinner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             xmlns:local="clr-namespace:ProjetECE.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="180" d:DesignWidth="200">
    <StackPanel>
        <StackPanel.Background>
            <SolidColorBrush Color="White" />
        </StackPanel.Background>
        <Image 
            gif:ImageBehavior.AnimatedSource="/Resources/Images/movie-spinner.gif"
            Height="120"
        />
        <TextBlock
            Style="{StaticResource BebasNeueFont}"
            HorizontalAlignment="Center"
            FontSize="20"
        >
            Fetching movies in progress...
        </TextBlock>
    </StackPanel>
</UserControl>
